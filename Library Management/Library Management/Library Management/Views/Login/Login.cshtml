@model Library_Management.Models.User
@{
    ViewBag.Title = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-sm p-4">
        <h2 class="text-center mb-4">Login</h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        <form method="post">
            <label class="form-label" for="Email">Email:</label>
            <input type="email" name="Email" placeholder="Enter your email" class="form-control" required />
            <p class="text-danger">@Html.ValidationMessage("Email")</p>

            <label class="form-label" for="Password">Password:</label>
            <input type="password" name="Password" placeholder="Enter your password" class="form-control" required />
            <p class="text-danger">@Html.ValidationMessage("Password")</p>

            <input type="submit" value="Login" class="btn btn-primary w-100 mt-3" />
            @if (TempData["msg"] != null)
            {
                <div class="mt-4 text-center">
                    <p class="text-danger">@TempData["msg"]</p>
                </div>
            }
        <div class="mt-4 text-center">
            <p class="mb-1">
                Don't have an account?
                <a href="/Member/Register" class="link-primary">Register</a>
            </p>
            <p>
                Or continue without login?
                <a href="/Member/Books" class="link-secondary">Enter as Guest</a>
            </p>
            <p>
                <a href="/Member/ForgetPassword" class="link-secondary">Forget Password?</a>
            </p>
        </div>
        </form>
    </div>
</div>

