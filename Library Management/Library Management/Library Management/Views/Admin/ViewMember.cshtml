@model Library_Management.Models.User
@{
    ViewBag.Title = "Member Details";
}
@Html.Partial("_AdminNav")

<h2>Member Details</h2>

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Address</th>
        <td>@Model.Address</td>
    </tr>
    <tr>
        <th>Password</th>
        <td>@Model.Password</td>
    </tr>
    <tr>
        <th>Created At</th>
        <td>@Model.CreatedAt</td>
    </tr>
</table>

<a href="@Url.Action("BorrowHistory", "Admin", new { memberId = Model.ID })" class="btn btn-info">View Borrow History</a>
<a href="@Url.Action("AllMembers", "Admin")" class="btn btn-secondary">Back to List</a>

