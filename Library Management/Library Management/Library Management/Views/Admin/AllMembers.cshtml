@model List<Library_Management.Models.User>
@{
    ViewBag.Title = "All Members";
}

@Html.Partial("_AdminNav")

<h2>All Members</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th style="width:300px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td>@member.Name</td>
                <td>@member.Email</td>
                <td>
                    <a href="@Url.Action("ViewMember", "Admin", new { id = member.ID })" class="btn btn-info btn-sm">View More</a>
                    <a href="@Url.Action("EditMember", "Admin", new { id = member.ID })" class="btn btn-warning btn-sm">Update</a>
                    <a href="@Url.Action("DeleteMember", "Admin", new { id = member.ID })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure to delete this member?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
